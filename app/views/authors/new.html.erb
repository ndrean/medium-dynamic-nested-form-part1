<div class="row">
    
    
    <div class="card">
        <div class="card-body">
            <%= simple_form_for @author do |f| %>
                <%= f.input :name %>
                <%= f.simple_fields_for :books do |b| %>
                    <div id="select"><fieldset data-fieldset-id=<%= b.index %>
                    <%= b.input :title %>
                    <% end%>
                    </fieldset></div>
                <%= f.button :submit, class:"btn btn-primary" %>
            <% end%>
            <button id="addComment">AddComment</button>

        </div>
    </div>
    
</div>


