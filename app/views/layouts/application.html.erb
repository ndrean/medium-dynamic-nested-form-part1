<!DOCTYPE html>
<html>
  <head>
    <title>Medium</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
  <div class="container">
    <%= yield %>
  </div>
  
  <div class="container">
    <% if Rails.env.development? %>
      <div class="container">
          <div class="card">
              <div class="card-body">
                      <code>
                          <%#= debug(params) %>
                      </code>
                      <code>
                          <%= params.inspect %>
                      </code>
              </div>
          </div>
      </div>
  <% end %>
  </div>
    
  </body>
</html>
